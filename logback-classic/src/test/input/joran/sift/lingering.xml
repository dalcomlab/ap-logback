<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration>

<configuration debug="true">

  <appender name="SIFT" class="com.dalcomlab.logback.classic.sift.SiftingAppender">

    <discriminator>
      <key>linger</key>
      <defaultValue>linger</defaultValue>
    </discriminator>
    <sift>
      <appender name="list-${linger}"
        class="com.dalcomlab.logback.core.read.ListAppender" />
    </sift>
  </appender>

  <root level="DEBUG">
    <appender-ref ref="SIFT" />
  </root>

</configuration>

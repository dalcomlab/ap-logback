<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration>

<configuration debug="true">

  <appender name="SIFT" class="com.dalcomlab.logback.classic.sift.SiftingAppender">

    <mdcKey>userid</mdcKey>
    <default>asdad</default>
    <sift>
      <appender name="FILE-${userid}" class="com.dalcomlab.logback.core.FileAppender">
        <file>${userid}.log</file>
        <append>true</append>
        <layout class="com.dalcomlab.logback.classic.PatternLayout">
          <pattern>%d [%thread] %level %logger{35} - %msg%n</pattern>
        </layout>
      </appender>
    </sift>
  </appender>

  <root level="DEBUG">
    <appender-ref ref="SIFT" />
  </root>

</configuration>

<configuration debug="true">


  <property name="X" value="Y"/>  

  <appender name="SIFT" class="com.dalcomlab.logback.classic.sift.SiftingAppender">
    <discriminator>
      <key>localProperty</key>
      <defaultValue>default</defaultValue>
    </discriminator>
    <sift>
      <appender name="LIST-${localProperty}"
        class="com.dalcomlab.logback.core.testUtil.StringListAppender">
        <layout>
          <pattern>${X}%msg</pattern>                       
        </layout>
      </appender>
    </sift>
  </appender>

  <root level="DEBUG">
    <appender-ref ref="SIFT" />
  </root>

</configuration>

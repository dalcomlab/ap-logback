
<configuration>

  <if condition='property("HOSTNAME").equals("XYZ87")'>
    <then>

      <appender name="CON" class="com.dalcomlab.logback.core.ConsoleAppender">
        <encoder>
          <pattern>%d %-5level %logger{35} - %msg %n</pattern>
        </encoder>
      </appender>
      <root>
        <appender-ref ref="CON" />
      </root>

    </then>
    <else>

      <appender name="LIST" class="com.dalcomlab.logback.core.read.ListAppender"/>
      <root>
        <appender-ref ref="LIST" />
      </root>

    </else>
  </if>

  <appender name="FILE" class="com.dalcomlab.logback.core.FileAppender">
    <file>${randomOutputDir}/conditional.log</file>
    <encoder>
      <pattern>%d %-5level %logger{35} - %msg %n</pattern>
   </encoder>
  </appender>

  <root level="ERROR">
     <appender-ref ref="FILE" />
  </root>




</configuration>